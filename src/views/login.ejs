    <!-- custom script -->
    <script>
        // setting variable for buttons
        let googleButton = document.getElementById('googleButton'); // for google button
        let facebookButton = document.getElementById('facebookButton'); // for facebook button
        
        // onclik function for google oauth route
        googleButton.onclick = function() {
            location.assign('/auth/google');
        }

        // onclick function for facebook oauth route
        facebookButton.onclick = function() {
            location.assign('/auth/facebook');
        }
    </script>
    
